{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:prettier/recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "prettier",
        "@typescript-eslint",
        "simple-import-sort"
    ],
    "ignorePatterns": "build",
    "rules": {
        "prettier/prettier": "error",
        "simple-import-sort/imports": "warn"
    }
}